body, html {
	background: white;
	color: black;
	position: absolute;
	height: 100%;
	width: 100%;
	padding: 0;
	margin: 0;
}

#mithril-target {
	height: 100%;
	margin: 0 auto;
}
.loading {
	margin-left: auto;
	margin-right: auto;
	text-align: center;
	vertical-align: middle;
	position: relative;
	top: 30%;
	bottom: 0;
}
.hidden {
	display: none;
}

// Theming
* {
	--mdc-theme-primary: #8bc34a;
	--mdc-theme-secondary: #a62;
	--mdc-theme-secondary: #ee6420;
	--mdc-theme-error: #dd4433;
	--mdc-theme-on-error: #ffa;
}
// Fixes focused floating label color not taking custom theme's colors
.mdc-select:not(.mdc-select--disabled) .mdc-select__native-control:focus ~ .mdc-floating-label,
.mdc-text-field--focused:not(.mdc-text-field--disabled) label.mdc-floating-label,
.mdc-text-field--focused:not(.mdc-text-field--disabled) input::placeholder
{
	color: var(--mdc-theme-primary) !important;
}
// Fixes select's helper-text looking like text-field's
.mdc-select:not(.mdc-select--disabled) .mdc-select__native-control ~ .mdc-floating-label,
.mdc-select:not(.mdc-select--disabled) + .mdc-text-field-helper-text {
    color: rgba(0, 0, 0, 0.6);
}
.mdc-select + .mdc-text-field-helper-text {
    margin-right: 12px;
    margin-left: 12px;
}
.mdc-select + .mdc-text-field-helper-text {
    margin-bottom: 8px;
}

// Fixes select's 'required' marker looking like for text-field's
.mdc-select__native-control:required + .mdc-floating-label::after {
    margin-left: 3px;
    content: "*";
}

// Fixes firefox focus ring
// TODO: @-moz-document url-prefix() {
.mdc-select, select, select:-moz-focusring, select::-moz-focus-inner {
   color: transparent !important;
   text-shadow: 0 0 0 #000 !important;
   background-image: none !important;
   border:0;
}

// Tab panels
[role="tabpanel"][aria-hidden='true'] {
    display: none;
}

// Still seeing the current tab in showall mode
[role="tabpanel"][aria-hidden='false']:not(.active) {
    opacity: .5;
}

// Fix: Default "font awesome" icon size overrides tab one
.mdc-tab__icon.fa,
.mdc-select__icon.fa,
{
    font-size: 24px
}

// Debugging aid
.inspector:hover,
.inspector.shown {
    background-color: #eef;
    width: 20em;
    opacity: .7;
}
.inspector pre {
    position: absolute;
    bottom: 4ex;
    padding: 1ex;
    background-color: #fafaff;
}
.inspector {
    z-index: 1000;
    background-color: #fafaaa;
    position: fixed;
    bottom: 0;
    right: 0;
    opacity: .1;
    color: #002;
    width: 1px;
    overflow: visible;
    margin: 5px;
    vertical-align: bottom;
    transition: width 1s, opacity 1s;
}

.disclaimer {
	position: relative;
	border-radius: 4pt;
	padding: 12pt;
	background-color: var(--mdc-theme-error);
    color: var(--mdc-theme-on-error);
	margin: 12pt 0pt;
}

.seedocs {
	position: fixed;
	top:0;
	right:0;
	margin: 12pt;
	background: white;
}

h1, h2 {
	color: var(--mdc-theme-primary);
}

.orange {
    color: #aa4 !important;
}
.red {
    color: red !important;
}
.green {
    color: green !important;
}

.fieldgroup
	border: solid 2px var(--mdc-theme-primary)
	border-radius: 4pt
	padding-bottom: 2ex
	.fieldgroup_title
		text-transform: uppercase
		color: white
		margin-top: 0
		background-color: var(--mdc-theme-primary)
		padding: 1ex
	.field
		padding: 0 1em
		.fieldname
			font-weight: bold
			color: var(--mdc-theme-secondary)
			margin-right: 1ex
		.fieldname:after
			content: ":"
		.fieldvalue
			color: grey

.success_page
	text-align: center
	width: 100ex
	max-width: 80%
	margin-left: auto
	margin-right: auto

.error
	font-weight: bold
	color: var(--mdc-theme-error);
	padding: 2em;

