body, html {
	font-family: Roboto, sans-serif;
	color: black;
	position: absolute;
	height: 100%;
	width: 100%;
	padding: 0;
	margin: 0;
	background: rgba(204,221,204,0.133);
}

#mithril-target {
	height: 100%;
	margin: 0 auto;
	line-height: 1.3;
}

.steps .mdc-dialog .mdc-dialog__surface {
	max-height: calc(100vh - 120px);
}

.mdc-dialog.mdc-dialog--open {
    z-index: 50;
}

.loading {
	margin-left: auto;
	margin-right: auto;
	text-align: center;
	vertical-align: middle;
	position: relative;
	top: 30%;
	bottom: 0;
}

.hidden {
	display: none;
}

// Theming
:root {
	--mdc-theme-primary: #aec122;
	--mdc-theme-secondary: #aec122;
	--mdc-theme-error: #dd4433;
	--mdc-theme-on-error: #ffa;
}

.main {
	display: flex;
	flex-direction: column;
	flex-grow: 1;
	position: relative;
}

.main .mdc-top-app-bar {
	background: #FFFFFF;
	color: #3C4043;
	display: flex;
	align-items: center;
	justify-content: space-between;
	height: 64px;
	padding: 0 16px;
	-webkit-font-smoothing: antialiased;
	z-index: 99;
}

.main a, .main a:visited {
	color: var(--mdc-theme-primary);
	text-decoration: none;
	font-weight: bold;
}

// Fixes focused floating label color not taking custom theme's colors
.mdc-select:not(.mdc-select--disabled) .mdc-select__native-control:focus ~ .mdc-floating-label,
.mdc-text-field--focused:not(.mdc-text-field--disabled) label.mdc-floating-label,
.mdc-text-field--focused:not(.mdc-text-field--disabled) input::placeholder,
.mdc-select:not(.mdc-select--disabled).mdc-select--focused .mdc-floating-label
{
	color: var(--mdc-theme-primary) !important;
}

// Fixes select's helper-text looking like text-field's
.mdc-select:not(.mdc-select--disabled) .mdc-select__native-control ~ .mdc-floating-label,
.mdc-select:not(.mdc-select--disabled) + .mdc-text-field-helper-text {
    color: rgba(0, 0, 0, 0.9);
}

.mdc-select + .mdc-text-field-helper-text {
    margin-right: 12px;
    margin-left: 12px;
}

.mdc-select + .mdc-text-field-helper-text {
    margin-bottom: 8px;
}

.mdc-text-field + .mdc-text-field-helper-text {
    margin-bottom: 8px;
}

.main .mdc-top-app-bar {
  background-color: white;
  color: var(--mdc-theme-primary);
}

// Fixes select's 'required' marker looking like for text-field's
.mdc-select__native-control:required + .mdc-floating-label::after {
    margin-left: 3px;
    content: "*";
}

// Fixes firefox focus ring
// TODO: @-moz-document url-prefix() {
.mdc-select, select, select:-moz-focusring, select::-moz-focus-inner {
   color: transparent !important;
   text-shadow: 0 0 0 #000 !important;
   background-image: none !important;
   border:0;
}

// Tab panels
[role="tabpanel"][aria-hidden='true'] {
    display: none;
}

// Still seeing the current tab in showall mode
[role="tabpanel"][aria-hidden='false']:not(.active) {
    opacity: .5;
}

// Fix: Default "font awesome" icon size overrides tab one
.mdc-tab__icon.fa,
.mdc-select__icon.fa,
{
    font-size: 24px
}

// Debugging aid
.inspector:hover,
.inspector.shown {
    background-color: #eef;
    width: 20em;
    opacity: .7;
}

.steps .mdc-snackbar__surface {
	/* background-color: var(--mdc-theme-error) */
	background-color: var(--mdc-theme-primary)
}

.steps .mdc-snackbar__label {
	font-weight: 600;
}

.steps .mdc-snackbar .mdc-icon-button {
	color: rgba(255, 255, 255, 0.87);
}

.inspector pre {
    position: absolute;
    bottom: 4ex;
    padding: 1ex;
    background-color: #fafaff;
}

.inspector {
    z-index: 1000;
    background-color: #fafaaa;
    position: fixed;
    bottom: 0;
    right: 0;
    opacity: .1;
    color: #002;
    width: 1px;
    overflow: visible;
    margin: 5px;
    vertical-align: bottom;
    transition: width 1s, opacity 1s;
}

.disclaimer {
	position: relative;
	border-radius: 4pt;
	padding: 12pt;
	background-color: var(--mdc-theme-error);
    color: var(--mdc-theme-on-error);
	margin: 12pt 0pt;
}

.seedocs {
	position: fixed;
	top:0;
	right:0;
	margin: 12pt;
	background: white;
}

