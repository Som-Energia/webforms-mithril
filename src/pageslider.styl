.pageslider {
	overflow-x: hidden;
	width: 100%;
	position: relative;
	top: 0;
	left: 0;
}
.pageslider-page {
	position: absolute;
	width: 100%;
	transition-property: transform, opacity;
	transition-duration: 0.5s;
}
.pageslider-page.active {
	opacity: 1;
}
.pageslider-page.back {
	opacity: 0;
	transform: translate(-100%,0);
}
.pageslider-page.next {
	opacity: 0;
	transform: translate(100%,0);
}

